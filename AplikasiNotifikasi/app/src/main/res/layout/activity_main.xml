<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

    <Button
        android:id="@+id/subuh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="04.42 AM"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/dzuhur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12.01 PM"
        android:textStyle="bold"
        android:layout_below="@+id/subuh"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/ashar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15.17 PM"
        android:textStyle="bold"
        android:layout_below="@+id/dzuhur"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/magrib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18.01 PM"
        android:textStyle="bold"
        android:layout_below="@+id/ashar"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/isya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="19.11 PM"
        android:textStyle="bold"
        android:layout_below="@+id/magrib"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</RelativeLayout>